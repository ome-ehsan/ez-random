{
  "name": "simplified-random",
  "version": "1.0.0",
  "description": "Python-style random utilities for TypeScript/JavaScript with clean, intuitive API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
      
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "keywords": [
    "random",
    "python",
    "utilities",
    "typescript",
    "randint",
    "choice",
    "sample",
    "shuffle",
    "gaussian",
    "crypto",
    "secure-random"
  ],
  "author": "ome-ehsan voidcryptic01@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ome-ehsan/ez-random.git"
  },
  "bugs": {
    "url": "https://github.com/ome-ehsan/ez-random/issues"
  },
  "homepage": "https://github.com/ome-ehsan/ez-random#readme",
  "devDependencies": {
    "@types/node": "^20.19.26",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
